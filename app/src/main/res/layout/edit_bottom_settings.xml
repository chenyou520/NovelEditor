<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/set_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_bottom_settings_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/edit_less_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chapter_page_less_brightness" />

            <SeekBar
                android:id="@+id/edit_brightness_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:maxHeight="10dp"
                android:min="0"
                android:minHeight="10dp"
                android:progress="50"
                android:progressDrawable="@drawable/edit_progress_horizontal"
                android:thumb="@drawable/icon_slip_circle" />

            <ImageView
                android:id="@+id/edit_more_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chapter_page_more_brightness" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_set_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/edit_font_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chapter_page_font_small" />

            <com.chenyou.noveleditor.pager.SliderFont
                android:id="@+id/seekbar_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                android:id="@+id/edit_font_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chapter_page_font_large" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/edit_set_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/edit_set_rb_whitle"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/icon_skin_white_select" />

            <RadioButton
                android:id="@+id/edit_set_rb_pink"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/icon_skin_pink_select" />

            <RadioButton
                android:id="@+id/edit_set_rb_yellow"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/icon_skin_yellow_select" />

            <RadioButton
                android:id="@+id/edit_set_rb_green"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/icon_skin_green_select" />

            <RadioButton
                android:id="@+id/edit_set_rb_blue"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/icon_skin_blue_select" />

            <RadioButton
                android:id="@+id/edit_set_rb_black"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/icon_skin_black_select" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>